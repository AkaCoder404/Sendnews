<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings"
    android:key="SETTINGS">

    <PreferenceCategory
        android:title="Theme">
        <SwitchPreference
            android:defaultValue="true"
            android:key="LIGHT"
            android:summaryOff="Light Mode is activated"
            android:summaryOn="Dark Mode is activated"
            android:textColor="@color/pHubGray"
            android:title="Dark / Light Mode"
            android:enabled="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen Orientation">
            <SwitchPreference
                android:title="Orientation"
                android:key="ORIENTATION"
                android:defaultValue="true"
                android:enabled="false"
                >
            </SwitchPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Categories">
        <CheckBoxPreference
            android:title="All Categories"
            android:key="ALL CATEGORIES"
            android:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:title="News"
            android:key="NEWS"
            android:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:title="Event"
            android:key="EVENT"
            android:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:title="Paper"
            android:key="PAPER"
            android:defaultValue="false">
        </CheckBoxPreference>
    </PreferenceCategory>

